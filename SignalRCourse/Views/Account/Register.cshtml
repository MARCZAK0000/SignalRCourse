@using SignalRCourse.Model;
@model RegisterAccountDto
<div class="container-fluid">
    <div class="container">
        <div class="text-center">
            <div class="display-3">Register Account</div>
        </div>
        <div class="mt-3 mx-1">
            <form method="post" asp-action="register">
                <div class="form-floating mb-3">
                    <input asp-for="Login" class="form-control" autocomplete="on" aria-required="true" />
                    <label asp-for="Login">Login</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" asp-for="Password" class="form-control" autocomplete="on" aria-required="true" />
                    <label asp-for="Password">Password</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" autocomplete="on" aria-required="true" />
                    <label asp-for="Email">Email</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" autocomplete="on" aria-required="true" />
                    <label asp-for="Name">Name</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Surname" class="form-control" autocomplete="on" aria-required="true" />
                    <label asp-for="Surname">Surname</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="PhoneNumber" class="form-control" autocomplete="on" aria-required="true" />
                    <label asp-for="PhoneNumber">Phone Number</label>
                </div>
                <div>
                    <button id="hello" type="submit" class="w-100 btn btn-lg btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>
