@using SignalRCourse.Model;
@model LoginAccountDto
<div class="container-fluid">
    <div class="container">
        <div class="text-center">
            <div class="display-3">Sign In</div>
        </div>
        <div class="mt-3 mx-1">
            <form asp-action="login" method="post">
                <div class="form-floating mb-3">
                    <input asp-for=Login id="loginUserNameInput" class="form-control" autocomplete="on" aria-required="true" />
                    <label asp-for=Login >Username</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for=Password id="loginPasswordInput" type="password" class="form-control" autocomplete="on" aria-required="true" />
                    <label asp-for=Password> Password</label>
                </div>
                <div>
                    <button id="loginSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/login.js"></script>
}