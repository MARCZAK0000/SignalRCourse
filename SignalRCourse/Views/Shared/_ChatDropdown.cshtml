@using SignalRCourse.Repository;
@inject IJobToDoRepository _todo
@{
    var list = await _todo.GetAllUsers();
}


<div class="d-flex align-content-center">
    <div class="dropdown">
        <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-chat" viewBox="0 0 16 16">
                <path d="M2.678 11.894a1 1 0 0 1 .287.801 11 11 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8 8 0 0 0 8 14c3.996 0 7-2.807 7-6s-3.004-6-7-6-7 2.808-7 6c0 1.468.617 2.83 1.678 3.894m-.493 3.905a22 22 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a10 10 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9 9 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105" />
            </svg>
        </button>
        <ul class="dropdown-menu" style="width: 400px">
            <li>
                <div class="dropdown-header">
                    <div class="text-center">
                        <div class="display-5 p-3">Chat</div>
                    </div>
                </div>
            </li>
            <li><div class="dropdown-divider"></div></li>
            <li>
                <div class="dropdown-item">
                    @foreach (var item in list)
                    {
                        <div class="row user">
                            <div class="col-sm-2">
                                <div class="d-flex justify-content-center align-items-center h-100">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 10 10" width="10px" height="10px">
                                        <circle title="@item.AccountID" cx="3" cy="3" r="3" fill="red" fill-opacity="1.0" />
                                    </svg>
                                </div>

                            </div>
                            <div class="col-sm-7">
                                <div class="d-flex justify-content-center align-items-center fs-5">
                                    @item.Name @item.Surname
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="d-flex d-flex justify-content-center align-items-center ">
                                    <a asp-action="user" asp-controller="chat" role="button" class="btn btn-outline-primary mx-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat" viewBox="0 0 16 16">
                                            <path d="M2.678 11.894a1 1 0 0 1 .287.801 11 11 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8 8 0 0 0 8 14c3.996 0 7-2.807 7-6s-3.004-6-7-6-7 2.808-7 6c0 1.468.617 2.83 1.678 3.894m-.493 3.905a22 22 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a10 10 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9 9 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105" />
                                        </svg>
                                    </a>
                                    <a asp-action="user" asp-controller="chat" role="button" class="btn btn-outline-success">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                            <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z" />
                                        </svg>
                                    </a>
                                </div>
                            </div>

                        </div>
                    }
                    
                </div>
            </li>
        </ul>
    </div>
</div>


@section Scripts{
    <script src="~/js/chat.js"></script>
}
